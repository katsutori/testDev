form(class='create-task')
    div.taskContainer
        input(type='hidden' name='_csrf' value=csrfToken)
        label.descripLabel(for="description")
        input.descrip(type="text", placeholder="Add a task...", id="description", name="description" required=true)
        div.taskSubContainer
            label.dueDateLabel(for="dueDate") Due Date
            input.dueDate(type="datetime-local", id="dueDate", name="dueDate" required=true @bind:format="yyyy-MM-ddTHH:mm" step="1")
            label.isCompletedLabel(for="isCompleted") Completed?
            input.isCompleted(type="checkbox", id="checkbox", name="isCompleted")
            label.contactsLabel(for="givenTo") Contacts
            select(id="givenTo", name="givenTo")
                option(value="" selected)
                each contact in contactsAll
                    option(value=contact.username)= contact.username
            label.listLabel(for="title") Lists
            select(id="title", name="title")
                each list in myLists
                    option(value=list.title)= list.title
