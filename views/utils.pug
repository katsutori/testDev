mixin field(labelText, fieldName, fieldValue, fieldType = 'text', placeholder = null, required = true)
  div
    label(for=fieldName)= labelText
    if fieldType === 'textarea'
      textarea(id=fieldName name=fieldName rows='5')= fieldValue
    else
      input(type=fieldType id=fieldName name=fieldName value=fieldValue placeholder=fieldName required = true)


mixin validationErrorSummary(errors)
  if errors
    div.errors-container
      p.err-header The following error(s) occurred:
      ul
        each error in errors
          li.err-msg= error
